<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
		"-//mybatis.org//DTD Config 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.itbank.model.BoardDAO">
	<select id="selectAll" resultType="com.itbank.model.BoardDTO">
		select * from board order by idx desc
	</select>
	
	<select id="selectOne" parameterType="com.itbank.model.BoardDTO" resultType="com.itbank.model.BoardDTO">
		select * from board where idx = #{idx}
	</select>

	<insert id="insert" parameterType="com.itbank.model.BoardDTO">
		
		insert into board(idx, title, writer, content, password, ipaddr) values(
			board_seq.nextval,
			#{title},
			#{writer},
			#{content},
			#{password},
			#{ipaddr}
		) 
	</insert>
		
	<update id="update" parameterType="com.itbank.model.BoardDTO">
		update board set content = #{content} where = #{idx}
	</update>
		
	<delete id="delete" parameterType="com.itbank.model.BoardDTO">
		delete from board where idx = #{idx}
	</delete>


</mapper>	
